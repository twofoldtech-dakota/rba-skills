---
/**
 * PageTitle override — adds share buttons below the page heading.
 * The ID '_top' matches Starlight's PAGE_TITLE_ID (used by skip-link and TOC).
 */
const { entry } = Astro.locals.starlightRoute;
const isSplash = entry.data.template === 'splash';
const title = entry.data.title;
---

<h1 id="_top">{title}</h1>

{!isSplash && (
	<div class="share-bar" data-share-bar>
		<button type="button" class="share-btn" data-copy-link aria-label="Copy link to clipboard">
			<svg aria-hidden="true" width="14" height="14" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
				<path d="M6.5 9.5l3-3"/>
				<path d="M9 2.5l1.75-1.25a2.12 2.12 0 0 1 3 3L12.5 6"/>
				<path d="M7 13.5l-1.75 1.25a2.12 2.12 0 0 1-3-3L3.5 10"/>
			</svg>
			<span data-copy-label>Copy Link</span>
		</button>

		<a class="share-btn" data-share-linkedin href="#" target="_blank" rel="noopener noreferrer" aria-label="Share on LinkedIn">
			<svg aria-hidden="true" width="14" height="14" viewBox="0 0 16 16" fill="currentColor">
				<path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.016-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.52 1.248 1.326 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.712-2.165 1.198V6.169H7.2c.032.675 0 7.225 0 7.225h2.401z"/>
			</svg>
			LinkedIn
		</a>

		<a class="share-btn" data-share-twitter href="#" target="_blank" rel="noopener noreferrer" aria-label="Share on X">
			<svg aria-hidden="true" width="14" height="14" viewBox="0 0 16 16" fill="currentColor">
				<path d="M12.6.75h2.454l-5.36 6.126L16 15.25h-4.937l-3.867-5.055-4.425 5.055H.316l5.733-6.554L0 .75h5.063l3.495 4.622L12.601.75zm-.86 13.028h1.36L4.323 2.145H2.865l8.875 11.633z"/>
			</svg>
			X
		</a>

		<button type="button" class="share-btn share-btn--native" data-share-native aria-label="Share this page">
			<svg aria-hidden="true" width="14" height="14" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
				<path d="M4 8h8"/>
				<path d="M8 4v8"/>
				<rect x="1" y="1" width="14" height="14" rx="3"/>
			</svg>
			Share
		</button>
	</div>
)}

<style>
	@layer starlight.core {
		h1 {
			margin-top: 1rem;
			font-size: var(--sl-text-h1);
			line-height: var(--sl-line-height-headings);
			font-weight: 600;
			color: var(--sl-color-white);
		}
	}
</style>

<script>
	function initShareBar() {
		document.querySelectorAll('[data-share-bar]').forEach((bar) => {
			const url = window.location.href;
			const title = document.title;

			// Copy Link
			const copyBtn = bar.querySelector('[data-copy-link]');
			const copyLabel = bar.querySelector('[data-copy-label]');
			if (copyBtn && copyLabel) {
				copyBtn.addEventListener('click', async () => {
					try {
						await navigator.clipboard.writeText(url);
						const original = copyLabel.textContent;
						copyLabel.textContent = 'Copied!';
						copyBtn.classList.add('share-btn--copied');
						setTimeout(() => {
							copyLabel.textContent = original;
							copyBtn.classList.remove('share-btn--copied');
						}, 2000);
					} catch {
						// Fallback: select from a temporary input
						const input = document.createElement('input');
						input.value = url;
						document.body.appendChild(input);
						input.select();
						document.execCommand('copy');
						document.body.removeChild(input);
						copyLabel.textContent = 'Copied!';
						setTimeout(() => { copyLabel.textContent = 'Copy Link'; }, 2000);
					}
				});
			}

			// LinkedIn
			const linkedIn = bar.querySelector('[data-share-linkedin]');
			if (linkedIn instanceof HTMLAnchorElement) {
				linkedIn.href = `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(url)}`;
			}

			// X / Twitter
			const twitter = bar.querySelector('[data-share-twitter]');
			if (twitter instanceof HTMLAnchorElement) {
				twitter.href = `https://x.com/intent/tweet?url=${encodeURIComponent(url)}&text=${encodeURIComponent(title)}`;
			}

			// Native Share — only show if supported
			const nativeBtn = bar.querySelector('[data-share-native]');
			if (nativeBtn) {
				if (navigator.share) {
					nativeBtn.addEventListener('click', async () => {
						try {
							await navigator.share({ title, url });
						} catch {
							// User cancelled — ignore
						}
					});
				} else {
					(nativeBtn as HTMLElement).style.display = 'none';
				}
			}
		});
	}

	// Run on initial load and after view transitions
	document.addEventListener('astro:page-load', initShareBar);
</script>
